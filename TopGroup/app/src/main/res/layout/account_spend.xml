<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_cancel_spend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="X"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp"
                android:text="支出"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_submit_spend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="90dp"
                android:text="√"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_type_spend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/other"/>
            <TextView
                android:id="@+id/tv_type_spend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="其他"/>
            <EditText
                android:id="@+id/et_type_spend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textSize="30sp"
                android:digits="0123456789"
                android:inputType="number"
                android:maxLength="8"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_marginTop="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_other_spend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/other"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="其他 "/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="120dp"
            android:layout_marginTop="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/food"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="餐饮 "/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="200dp"
            android:layout_marginTop="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_traffic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/traffic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="交通"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="280dp"
            android:layout_marginTop="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_drug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/drug"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="药品"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_marginTop="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_fruit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fruit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="水果"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="120dp"
            android:layout_marginTop="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_snacks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/snacks"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="零食"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="200dp"
            android:layout_marginTop="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/telephone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="话费"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
