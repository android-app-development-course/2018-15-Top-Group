<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_cancel_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="X"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp"
                android:text="收入"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_submit_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="90dp"
                android:text="√"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_type_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/other"/>
            <TextView
                android:id="@+id/tv_type_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="其他"/>
            <EditText
                android:id="@+id/et_type_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textSize="30sp"
                android:digits="0123456789"
                android:inputType="number"
                android:maxLength="8"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_marginTop="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_other_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/other"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="其他 "/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="120dp"
            android:layout_marginTop="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_invest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/invest"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="投资"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="200dp"
            android:layout_marginTop="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_refund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/refund"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="退款"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="280dp"
            android:layout_marginTop="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cash"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="现金"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_marginTop="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_redmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/redmoney"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="红包"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="120dp"
            android:layout_marginTop="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bonus"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="奖金"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
